<!DOCTYPE html>
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/smoothscroll.js"></script>
<script src="~/Scripts/nivo-lightbox.min.js"></script>
<script src="~/Scripts/jquery.easing-1.3.js"></script>
<script src="~/Scripts/plugins.js"></script>
<script src="~/Scripts/owl.carousel.min.js"></script>
<script src="~/Scripts/jquery.parallax.js"></script>
<script src="~/Scripts/wow.min.js"></script>
<script src="~/Scripts/custom.js"></script>


<html lang="en">
<head>

    <meta charset="utf-8">
    @model GameStation.Models.User

    <!-- Template site title
    ================================================== -->
    <title>Gamestation</title>

    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <!--

    Template 2078 Adventure

    http://www.tooplate.com/view/2078-adventure

    -->
    <!-- Bootstrap CSS
    ================================================== -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">

    <!-- Animate CSS
    ================================================== -->
    <link rel="stylesheet" href="~/Content/css/animate.min.css">

    <!-- Font Icons
    ================================================== -->
    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/css/et-line-font.css">

    <!-- Nivo Lightbox CSS
    ================================================== -->
    <link rel="stylesheet" href="~/Content/css/nivo-lightbox.css">
    <link rel="stylesheet" href="~/Content/css/nivo_themes/default/default.css">

    <!-- Owl Carousel CSS
    ================================================== -->
    <link rel="stylesheet" href="~/Content/css/owl.theme.css">
    <link rel="stylesheet" href="~/Content/css/owl.carousel.css">

    <!-- BxSlider CSS
    ================================================== -->
    <link rel="stylesheet" href="~/Content/css/bxslider.css">

    <!-- Main CSS
    ================================================== -->
    <link rel="stylesheet" href="~/Content/css/style.css">

    <!-- Google web font
    ================================================== -->
    <link href='https://fonts.googleapis.com/css?family=Raleway:700' rel='stylesheet' type='text/css'>

</head>

<body data-spy="scroll" data-target=".navbar-collapse" data-offset="50">



    <!-- Preloader section
    ================================================== -->
    <section class="preloader">

        <div class="sk-rotating-plane"></div>

    </section>


    <!-- Navigation section
    ================================================== -->
    <section class="navbar navbar-fixed-top custom-navbar" role="navigation">
        <div class="container">

            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                </button>
                <a href="/Home/Index" class="smoothScroll navbar-brand">GAMESTATION</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">

                    <!-- <li><a href="#home" class="smoothScroll">HOME</a></li> -->
                </ul>
            </div>

        </div>
    </section>


    <!-- Homepage section
    ================================================== -->
    <!-- Plan section
    ================================================== -->
    <section id="plan" class="parallax-section">
        <div class="container">
            <div class="row">

                <!-- Section title
                ================================================== -->



                <div class="col-md-4 col-sm-6 wow fadeInUp" data-wow-delay="0.6s" style="margin-left:400px">
                    <div class="plan">
                        <h2 class="plan-title">SIGNUP</h2>

                        @using (Html.BeginForm("signUp", "Home", FormMethod.Post, new { enctype = "multipart/form-data", Id = "signup" }))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(m => Model.email, new { @placeholder = "New Email", @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(m => Model.email)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => Model.uname, new { @placeholder = "New Username", @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(m => Model.uname)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => Model.fname, new { @placeholder = "First Name", @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(m => Model.fname)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => Model.lname, new { @placeholder = "Last Name", @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(m => Model.lname)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => Model.secretq, new { @placeholder = "Secret Question", @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(m => Model.secretq)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => Model.secreta, new { @placeholder = "Secret Answer", @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(m => Model.secreta)
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(m => Model.pass, new { type = "password", @placeholder = "New Password", @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(m => Model.pass)
                            </div>
                            <div class="form-group">
                               @Html.TextBoxFor(m => m.imgpath, new { type = "file", @class = "form-control", @align = "left", @style = "display:inline ; width:275px" })
                             </div>

                            <div class="plan-button" style="margin-left:40px">
                                <input type="submit" class="btn btn-default" id="signBtn" value="SIGNUP">
                            </div>
                            <div id="message" style="margin-left:40px"></div>
                        }


                    </div>




                </div>


            </div>
        </div>

    </section>


    <!-- Contact section
    ================================================== -->
    <!-- Footer section
    ================================================== -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12">

                    <h2 class="wow bounceIn">OSAMA STUDIOS</h2>
                    <ul class="social-icon">
                        <li><a href="#" class="fa fa-facebook wow fadeIn" data-wow-delay="0.3s"></a></li>
                        <li><a href="#" class="fa fa-twitter wow fadeIn" data-wow-delay="0.6s"></a></li>
                        <li><a href="#" class="fa fa-dribbble wow fadeIn" data-wow-delay="0.9s"></a></li>
                        <li><a href="#" class="fa fa-behance wow fadeIn" data-wow-delay="1s"></a></li>
                        <li><a href="#" class="fa fa-github wow fadeIn" data-wow-delay="1.3s"></a></li>
                        <li><a href="#" class="fa fa-tumblr wow fadeIn" data-wow-delay="1.6s"></a></li>
                    </ul>
                    <p>
                        Copyright &copy; 2016 Osama Studios

                        | Design: <a rel="nofollow" href="http://www.osamastudios.com" target="_parent">Osama Mukhtar</a>
                    </p>

                </div>
            </div>
        </div>
    </footer>




    <!-- Javascript
    ================================================== -->






</body>
</html>
