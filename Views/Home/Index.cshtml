                        <hr>
                        <p>Once you login, we will tell you if you can run a particular game on your PC</p>
                    </div>
                </div>
                

                <!-- Contact form section
                ================================================== -->
                <div class="col-md-offset-1 col-md-10 col-sm-12">
                    <form action="/home/login#contact" method="post" class="wow fadeInUp" data-wow-delay="0.6s">
                        <div class="col-md-4 col-sm-6" style="margin-left:155px">
                            @Html.TextBoxFor(m => Model.email, new { @placeholder = "Email", @class = "form-control", @autocomplete = "off" })
                            @Html.ValidationMessageFor(m => Model.email)
                        </div>
                        <div class="col-md-4 col-sm-6">
                            @Html.TextBoxFor(m => Model.pass, new { type = "password", @placeholder = "Password", @class = "form-control", @autocomplete = "off" })
                            @Html.ValidationMessageFor(m => Model.pass) 
                        </div>
                        <div id="forpass" class="col-md-offset-2 col-md-8 col-sm-offset-2 col-sm-8" style="color:red">Forgot Password?</div>
                        <div class="col-md-offset-2 col-md-8 col-sm-offset-2 col-sm-8">
