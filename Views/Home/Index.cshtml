                        <div class="col-md-4 col-sm-6" style="margin-left:155px">
                            <input type="text" autocomplete = "off" class="form-control" placeholder="Secret Answer" name="seca" id="seca">
                        </div>
                        <div class="col-md-offset-2 col-md-8 col-sm-offset-2 col-sm-8">
                            <input type="submit" class="form-control" value="Show Password" id="forgetBtn2">
                        </div>

                    </form>
                </div>

